{
  "appId": "com.alex.naturaleducation",
  "productName": "自然教育",
  "directories": {
    "buildResources": "resources",
    "output": "dist"
  },
  "files": [
    "assets/**/*",
    "build/**/*",
    "capacitor.config.*",
    "app/**/*",
    "../public/runtime-config.js"
  ],
  "publish": [],
  "nsis": {
    "allowElevation": true,
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "win": {
    "target": "portable",
    "icon": "assets/appIcon.ico"
  },
  "mac": {
    "category": "your.app.category.type",
    "target": "dmg"
  }
}